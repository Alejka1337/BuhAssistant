# Production Environment Variables для eglavbuh.com.ua

# Application
APP_NAME=eGlavBuh API
APP_VERSION=1.0.0
DEBUG=False

# Database (AWS RDS PostgreSQL)
DATABASE_URL=postgresql://username:password@rds-endpoint.region.rds.amazonaws.com:5432/eglavbuh_db

# Redis (AWS ElastiCache или EC2)
REDIS_URL=redis://redis-endpoint:6379/0

# Elasticsearch (опционально, если используется)
ELASTICSEARCH_URL=http://elasticsearch-endpoint:9200

# JWT (ВАЖНО: сгенерировать через: openssl rand -hex 32)
SECRET_KEY=your-strong-secret-key-32-chars-minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google OAuth2 (если используется)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_IOS_CLIENT_ID=your-ios-client-id
GOOGLE_REDIRECT_URI=https://api.eglavbuh.com.ua/api/auth/google/callback

# Google Custom Search API
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CX=your-google-cx

# OpenAI API
OPENAI_API_KEY=your-openai-api-key

# Expo Push Notifications
EXPO_ACCESS_TOKEN=your-expo-access-token

# Email (SMTP)
# Для production рекомендуется использовать AWS SES или доменную почту
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=noreply@eglavbuh.com.ua
SMTP_PASSWORD=your-smtp-password

# CORS (разрешенные origin для API)
ALLOWED_ORIGINS=https://eglavbuh.com.ua,https://www.eglavbuh.com.ua,https://api.eglavbuh.com.ua

# Celery
CELERY_BROKER_URL=redis://redis-endpoint:6379/1
CELERY_RESULT_BACKEND=redis://redis-endpoint:6379/2

# AWS (если нужно для S3, SES и т.д.)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-central-1
AWS_S3_BUCKET=eglavbuh-static

# Monitoring (опционально)
SENTRY_DSN=your-sentry-dsn-for-error-tracking

