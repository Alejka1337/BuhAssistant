# Database (для локальной разработки используйте localhost, для Docker - postgres)
DATABASE_URL=postgresql://eglavbuh_user:your-password-here@postgres:5432/eglavbuh_db

# Redis (для Docker используйте redis, для локальной разработки - localhost)
REDIS_URL=redis://:your-redis-password@redis:6379/0

# Elasticsearch (опционально)
ELASTICSEARCH_URL=http://elasticsearch:9200

# Passwords для Docker Compose
POSTGRES_USER=eglavbuh_user
POSTGRES_PASSWORD=your-strong-password-here
POSTGRES_DB=eglavbuh_db
REDIS_PASSWORD=your-redis-password-here

# JWT
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google OAuth2
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# Google Custom Search API
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_CX=your-google-cx-here

# OpenAI (для фильтрации новостей)
OPENAI_API_KEY=your-openai-api-key-here

# Expo Push Notifications
EXPO_ACCESS_TOKEN=your-expo-access-token-here

# Email (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here

# Application
APP_NAME=BuhAssistant
APP_VERSION=1.0.0
DEBUG=True
ALLOWED_ORIGINS=http://localhost:8081,exp://localhost:8081

# Celery (используйте redis для Docker, localhost для локальной разработки)
CELERY_BROKER_URL=redis://:your-redis-password@redis:6379/1
CELERY_RESULT_BACKEND=redis://:your-redis-password@redis:6379/2

